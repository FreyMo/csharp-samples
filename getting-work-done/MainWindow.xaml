<Window x:Class="getting_work_done.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:getting_work_done"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate
            x:Key="WorkItemTemplate"
            DataType="{x:Type local:IWorkItem}">
            <ProgressBar Value="{Binding Path=Progress}"
                         Minimum="0"
                         Maximum="100"
                         MinHeight="50"
                         MinWidth="400"></ProgressBar>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <local:ViewModel></local:ViewModel>
    </Window.DataContext>
    <StackPanel>
        <ListView
            ItemTemplate="{StaticResource ResourceKey=WorkItemTemplate}"
            ItemsSource="{Binding Path=WorkItems}">
        </ListView>
        <Button Command="{Binding Path=StartCommand}">START ME</Button>
    </StackPanel>
</Window>
